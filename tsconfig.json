{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"experimentalDecorators": true, // 启用实验性的ES装饰器
		"emitDecoratorMetadata": true, // 为装饰器声明生成元数据
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true, //将 TypeScript 编译器设置为仅执行类型检查，而不生成编译输出文件
		"allowJs": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"types": ["element-plus/global", "vite-plugin-svg-icons/client"]
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "types/*.d.ts", "vite.config.ts", "src/views/nodejs/02.内置模块/http.js"],
	"exclude": ["node_modules", "dist", "**/*.js"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
